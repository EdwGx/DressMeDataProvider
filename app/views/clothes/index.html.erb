<p id="notice"><%= notice %></p>

<h1>Listing Clothes</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <th>Color</th>
      <th>Tags</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clothes.each do |clothe| %>
      <tr>
        <td><%= clothe.article.name %></td>
        <td><%= clothe.color.name %></td>
        <td><%= clothe.tags.map {|t| t.name }.join(', ') %></td>
        <td><%= clothe.score %></td>
        <td><%= link_to 'Show', clothe %></td>
        <td><%= link_to 'Edit', edit_clothe_path(clothe) %></td>
        <td><%= link_to 'Destroy', clothe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

